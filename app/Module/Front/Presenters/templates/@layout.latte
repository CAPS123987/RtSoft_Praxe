<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Test project</title>

	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="{$basePath}/css/style.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

	<script src="https://cdn.jsdelivr.net/npm/vanilla-sonner@0.5.2/dist/vanilla-sonner.umd.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanilla-sonner@0.5.2/dist/vanilla-sonner.min.css">
</head>

<body data-bs-theme="dark">
	<ol id="sonner-toast-container"
		position="top-center"
		max-toasts="3"
		rich-colors="true"
		theme="dark"
		duration="2500"
		closeButton="true"
		class="mb-0 p-0">
	</ol>

	<div class="navbar navbar-expand-lg bd-navbar sticky-top bg-primary-subtle mb-2 p-3">
		<nav class="container-xxl bd-gutter flex-wrap flex-lg-nowrap text-decoration-none list-unstyled">
			<li><a n:href="Homepage:" class="text-decoration-none text-primary h4">Články</a></li>
			{if $user->isLoggedIn()}
				<li>
					<a n:href="Sign:out" class="text-decoration-none text-primary h4">Odhlásit</a>
					<a n:if="$presenter->isAllowed($permList->adminPanel)" n:href="Sign:out" class="text-decoration-none text-primary h4">Admin</a>
				</li>
			{else}
				<li><a n:href="Sign:in" class="text-decoration-none text-primary h4">Přihlásit</a></li>
			{/if}
		</nav>
	</div>


	{include content}

	{block scripts}
	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
	{/block}

	<script>
		document.addEventListener('DOMContentLoaded', function () {
			{foreach $flashes as $flash}
				{switch $flash->type}
					{case 'success'}
						window.toast.success({$flash->message});
					{case 'error'}
						window.toast.error({$flash->message});
					{case 'info'}
						window.toast.info({$flash->message});
					{default}
						window.toast({$flash->message});
				{/switch}
			{/foreach}
		});
	</script>
</body>
</html>
